<% if notice %>
<p id="notice" class="text-info"><i class="fa fa-info-circle"></i> <%= notice %></p>
<% end %>

<div class="row">
  <div class="col-md-4 col-sm-4 text-center">
    <%= image_tag @user.avatar.url, class: 'img-circle' %>
  </div>
  <div class="col-md-8 col-sm-4">
    <h2><%= @user.username %></h2>
    <p><%= @user.email %></p>

    <% if @current_user %><%= link_to edit_user_path(@user) do %> <i class="fa fa-edit"></i> Edit<% end %><% end %>
  </div>
</div>

