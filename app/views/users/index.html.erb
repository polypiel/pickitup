<h1>Contributors</h1>

<% if notice %>
<p id="notice" class="text-info"><i class="fa fa-info"></i> <%= notice %></p>
<% end %>

<p><%= link_to new_user_path do %> <i class="fa fa-plus"></i> New contributor <% end %></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td style="text-align: right;">
          <div class="btn-group">
            <%= link_to user, :title => "Show", :class => 'btn btn-default btn-sm' do %><i class="fa fa-eye"></i><% end %>
            <%= link_to user, method: :delete, data: { confirm: "Do you really want to delete the contributor #{user.username}?" }, :title => "Delete", :class => 'btn btn-default btn-sm' do %><i class="fa fa-trash-o"></i><% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Invitations</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Sent on</th>
      <th>To</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @invitations.each do |user| %>
      <tr>
        <td><%= user.created_at.strftime("%m/%d/%Y %H:%M") %></td>
        <td><%= user.email %></td>
        <td style="text-align: right;">
          <div class="btn-group">
            <%= link_to user, method: :delete, data: { confirm: "Do you really want to delete the invitation to #{user.email}?" }, :title => "Delete", :class => 'btn btn-default btn-sm' do %><i class="fa fa-trash-o"></i><% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
