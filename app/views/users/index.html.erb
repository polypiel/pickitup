<h1>Listing users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td style="text-align: right;">
          <div class="btn-group">
            <%= link_to user, :title => "Show", :class => 'btn btn-default' do %><i class="fa fa-eye"></i><% end %>
            <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, :title => "Delete", :class => 'btn btn-default' do %><i class="fa fa-trash-o"></i><% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_user_path do %> <i class="fa fa-plus"></i> New User <% end %>
