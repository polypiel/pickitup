<%= form_for(@pickup, :html => {:role => 'form'}) do |f| %>
  <% if @pickup.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pickup.errors.count, "error") %> prohibited this pickup from being saved:</h2>

      <ul>
      <% @pickup.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <div class="row">
      <div class="col-md-6">
        <%= f.label :coin %><br>
        <%= f.collection_select :coin_id, Coin.all, :id, :to_s, {}, {:class => 'form-control'} %>
      </div>

      <div class="col-md-6">
        <%= f.label :date %><br>
        <%= f.datetime_field :date, :class => 'form-control' %>
      </div>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :comments %><br>
    <%= f.text_area :comments, rows: 4, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <div class="row">
      <div class="col-md-6">
        <%= f.label :longitude %><br>
        <%= f.text_field :longitude, :class => 'form-control' %>
      </div>
      <div class="col-md-6">
        <%= f.label :latitude %><br>
        <%= f.text_field :latitude, :class => 'form-control' %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit :class => 'btn btn-default' %>
  </div>
<% end %>
