<%= form_for(@pickup, :html => {:role => 'form'}) do |f| %>
  <% if @pickup.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pickup.errors.count, "error") %> prohibited this pickup from being saved:</h2>

      <ul>
      <% @pickup.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <div class="row">
      <div class="col-md-6">
        <%= f.label :coin %><br>
        <%= f.collection_select :coin_id, Coin.all, :id, :to_s, {}, {:class => 'form-control'} %>
      </div>

      <div class="col-md-6">
        <%= f.label :picked_at_date %><br>
        <%= f.date_field :picked_at_date, :class => 'form-control' %>

        <%= f.label :picked_at_time %><br>
        <%= f.time_field :picked_at_time, :class => 'form-control' %>
      </div>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :comments %><br>
    <%= f.text_area :comments, rows: 3, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <span id="search_coordinates_msg" class="text-info"><i class="fa fa-circle-o-notch fa-spin"></i> Searching for coordinates...</span>
    <div id="coords_part" class="row">
      <div class="col-md-6">
        <%= f.label :longitude %><br>
        <%= f.text_field :longitude, :class => 'form-control' %>
      </div>
      <div class="col-md-6">
        <%= f.label :latitude %><br>
        <%= f.text_field :latitude, :class => 'form-control' %>
      </div>
    </div>
  </div>

  <span id="search_location_msg" class="text-info"><i class="fa fa-circle-o-notch fa-spin"></i> Searching for location...</span>
  <div id="location_part" class="field form-group">
    <%= f.label :location %><br>
    <%= f.text_field :location, :class => 'form-control' %>
  </div>

  <hr>

  <div class="form-group actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>
