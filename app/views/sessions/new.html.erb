<div class="col-md-6 col-md-offset-3 white-bg">
  <h1 class="login-title">Pick it up! <span class="title-version">Beta</span></h1>

  <% if flash[:alert] %>
  <p id="notice" class="text-danger"><i class="fa fa-exclamation-triangle"></i> <%= flash[:alert] %></p>
  <% end %>
  <% if notice %>
  <p id="notice" class="text-info"><i class="fa fa-info"></i> <%= notice %></p>
  <% end %>

  <%= form_tag role: 'form' do %>
    <div class="form-group">
      <%= label_tag :username, 'Username', class: 'sr-only' %>
      <%= text_field_tag :username, params[:username], class: 'form-control', placeholder: "Username" %>
    </div>
    <div class="form-group">
      <%= label_tag :password, 'Password', class: 'sr-only' %>
      <%= password_field_tag :password, params[:password], class: 'form-control', placeholder: "Password" %>
    </div>
    <!--div class="form-group">
      <%= check_box_tag :rememberme %>
      <%= label_tag :rememberme, 'Remember me' %>
    </div-->
    <hr>

    <div class="form-group">
      <%= submit_tag "Log in", class: 'btn btn-primary login-submit' %>
    </div>
  <% end %>
  <!-- <p class="forgotpass"><a href="#" class="small">Forgot Password?</a></p> -->

</div>
