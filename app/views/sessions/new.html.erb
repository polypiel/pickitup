<div class="col-md-6 col-md-offset-3">
  <h1 class="login-title">Pick it up!</h1>

  <% if flash[:alert] %>
  <p id="notice" class="alert alert-danger"><%= flash[:alert] %></p>
  <% end %>
  
  <%= form_tag role: 'form' do %>
    <div class="form-group">
      <%= label_tag :username, 'Username', class: 'sr-only' %>
      <%= text_field_tag :username, params[:username], class: 'form-control', placeholder: "Username", placeholder: "Username" %>
    </div>
    <div class="form-group">
      <%= label_tag :password, 'Password', class: 'sr-only' %>
      <%= password_field_tag :password, params[:password], class: 'form-control', placeholder: "Password", placeholder: "Password" %>
    </div>
    
    <hr>

    <div class="form-group">
      <%= submit_tag "Log in", class: 'btn btn-primary login-submit' %>
    </div>
  <% end %>
  <!-- <p class="forgotpass"><a href="#" class="small">Forgot Password?</a></p> -->

</div>
